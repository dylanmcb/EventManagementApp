<p style="color: green"><%= notice %></p>

<h1>Events</h1>

<div id="events">
  <% @events.each do |event| %>
    <%= render event %>
    <p>
    <!-- Buttons to create and show events -->
    <%= link_to 'Show Event', event_path(event), class: 'btn btn-info' %>
    
    </p>
    
  <% end %>
</div>


<%= button_to 'Delete All Events', delete_all_from_index_events_path, method: :delete, class: 'btn btn-danger' %>


